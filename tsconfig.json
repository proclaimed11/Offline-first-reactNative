{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    // "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true, 
    // "emitDecoratorMetadata": true,
    // "skipLibCheck": true,
    // "moduleResolution": "node",
    // "resolveJsonModule": true,
    // "isolatedModules": true,
    // "noImplicitAny": false,
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["@nozbe/watermelondb"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}

